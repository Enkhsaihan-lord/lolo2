generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model MovieInfo {
  id          String @id @default(cuid())
  name        String
  description String
  image       String
  url         String
}

model User {
  id       Int    @id @default(autoincrement())
  email    String
  password String
  name     String
  role     role   @default(user)   // Admin, SuperAdmin, user
  set set @default(normal)
}

enum role {
  Admin
  SuperAdmin
  user
}

enum set {
  Premium
  normal
}